{
    "name": "Reddit Link Counter",
    "version": "1.0",
    "description": "Creates toolbar badge that holds a count of Reddit links visited",
    "permissions": [
        "storage",
        "history"
    ],
    "background": {
        "scripts": [
            "background.js",
            "backgroundInitialize.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/passport.png"
        }
    },
    "manifest_version": 2
}