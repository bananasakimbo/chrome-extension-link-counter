{
    "name": "Link Counter",
    "version": "0.0.0.5",
    "description": "Displays a count of pages visited on current domain. Optionally introduces a 200ms delay to all page navigation.",
    "permissions": [
        "storage",
        "history",
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "/backgrounds/initialize.js",
            "/backgrounds/main.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "24": "images/passport.png"
        }
    },
    "manifest_version": 2
}