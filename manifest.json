{
    "name": "Link Counter",
    "version": "0.0.0.4",
    "description": "Displays a count of pages visited on current domain. Optionally introduces 100ms delay to all web requests.",
    "permissions": [
        "storage",
        "history"
    ],
    "background": {
        "scripts": [
            "/backgrounds/initialize.js",
            "/backgrounds/badge.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "24": "images/passport.png"
        }
    },
    "manifest_version": 2
}